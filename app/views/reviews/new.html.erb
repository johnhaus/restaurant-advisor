<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-3">
      <h1 class="page-padding">Post review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, placeholder: "Great food" %>
        <%= f.submit "Add review", class: "button" %>
      <% end %>
    </div>
  </div>
</div>
