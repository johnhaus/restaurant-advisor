<%= simple_form_for @restaurant do |f| %>
  <%= f.error_notification %>

  <% if @restaurant.errors.any? %>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name, "Enter a name" %>
    <%= f.text_field :name %>
    <%= f.label :city, "Enter a city" %>
    <%= f.text_field :city %>
    <%= f.label :food_type, "Enter a food type" %>
    <%= f.text_field :food_type %>
    <%= f.label :rating, "Enter a rating" %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.button :submit %>
  </div>
<% end %>
