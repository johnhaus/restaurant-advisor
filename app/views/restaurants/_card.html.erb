<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/500/300');">
  <div>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <p><%= restaurant.city %></p>
    <p><%= restaurant.food_type %></p>
    <p>Rating: <%= "*" * restaurant.rating %></p>
  </div>

  <div class="small_font">
    <ul class="row top-padding">
      <%= link_to 'Show', restaurant, class: 'button'%>
      <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'button' %>
      <%= link_to "Remove restaurant", restaurant, method: :delete, data: {confirm: 'Are you sure?' }, class: 'button'%>
      <%= link_to "See the Chef", chef_restaurant_path(restaurant), class: 'button' %>
    </ul>
  </div>
</div>


