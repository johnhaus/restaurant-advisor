<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= restaurant.picture %>);">
  <div>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant), class:"link-style" %></h2>
    <p>City: <%= restaurant.city %></p>
    <p>Food Type: <%= restaurant.food_type %></p>
    <p>Rating: <%= "*" * restaurant.rating %></p>
  </div>
</div>
