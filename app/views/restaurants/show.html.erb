<% content_for(:title) do %>
  <%= @restaurant.name %> is on Restauant Advisor
<% end %>

<div class="container layout">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-3">
      <h1 class="page-padding"><%= @restaurant.name %></h1>
      <% if @restaurant.photo.present? %>
        <div class="large_card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @restaurant.photo, height: 300, width: 400, crop: :fill %>')">
        </div>
      <% else %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "nophoto.png" %>')">
        </div>
      <% end %>
      <p>City: <%= @restaurant.city %></p>
      <p>Food Type: <%= @restaurant.food_type %></p>
      <p>Rating: (<span class="star"><%= "*" * @restaurant.rating %></span>)</p>

      <p>Reviews:</p>
      <% if @restaurant.reviews.none? %>
        <ul>
          <li>Be the first to review this restaurant!</li>
        </ul>
      <% else %>
        <ul>
          <% @restaurant.reviews.each do |review| %>
          <li><%= review.content %></li>
          <% end %>
        </ul>
      <% end %>

      <p><%= link_to "Add review", new_restaurant_review_path(@restaurant), class: 'button' %></p>
      <p><%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'button' %></p>
      <p><button type="button" class="button" data-toggle="modal" data-target="#See-the-chef">See the Chef</button><%= render "modal" %></p>
      <p><%= link_to "Remove restaurant", @restaurant, method: :delete, data: {confirm: 'Are you sure?' }, class: 'button'%></p>
      <div>
      <p><%= link_to "Back to all restaurants", restaurants_path, class: 'button top-margin' %></p>
      </div>
    </div>
  </div>
</div>
